{% extends "base.html.twig" %}

{% block page_title %}NaviGator{% endblock %}

{% block page_content %}
    <div class="mt-5"></div>
    <div class="bg-form">
        <form method="POST" action="./connexion">
            <h1 class="title">Connexion</h1>
            <div class="input-box">
                <input type="text" value="" placeholder="Login" name="login" id="login_id" required>
            </div>
            <div class="input-box">
                <input type="password" value="" placeholder="Mot de passe" name="mdp" id="mdp_id" required>
            </div>
            <input type='hidden' name='action' value='connecter'>
            <input type='hidden' name='controleur' value='utilisateur'>
            <div>
                <input class="button-box text-center" type="submit" value="Connexion"/>
            </div>
        </form>
    </div>
{% endblock %}